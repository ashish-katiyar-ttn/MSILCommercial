@{Layout = null;}
@using MSIL.Models
@model CreateUser
<div class="container">
    <div class="screen">
        <div class="screen__content">

            @using (Html.BeginForm("CreateUsers", "Admin", FormMethod.Post, new { @class = "login" }))
            {
                @*<form class="login">*@
                <div class="login__field">
                    <i class="login__icon fas fa-user"></i>
                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "UserName", @class = "login__input" })
                    @*<input type="text" class="login__input" placeholder="User name / Email">*@
                </div>
                <div class="login__field">
                    <i class="login__icon fas fa-lock"></i>
                    @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", @class = "login__input", @type = "password" })
                    @*<input type="password" class="login__input" placeholder="Password">*@
                </div>
                <div class="login__field">
                    <i class="login__icon fas fa-lock"></i>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "login__input" })
                    @*<input type="password" class="login__input" placeholder="Password">*@
                </div>
                <button class="button login__submit" type="submit">
                    <span class="button__text">Create</span>
                    <i class="button__icon fas fa-chevron-right"></i>
                </button>
                @*</form>*@
            }
        </div>
    </div>
</div>

